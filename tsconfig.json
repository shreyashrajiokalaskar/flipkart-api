{
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES2022",
    "module": "CommonJS",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "alwaysStrict": true,
    "strict": true,
    "baseUrl": "libs",
    "outDir": "./build/",
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ],
    "paths": {
      "@constants/*": ["constants/*"],
      "@configs/*": ["configs/*"],
      "@entities/*": ["entities/*"],
      "@routes/*": ["routes/*"]
    }
  },
  "exclude": ["build/*"],
  "include": ["index.ts", "libs/**/*"]
}
