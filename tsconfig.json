{
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES2022",
    "module": "CommonJS",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "alwaysStrict": true,
    "strict": true,
    "baseUrl": "libs",
    "outDir": "./build/",
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ],
    "paths": {
      "@entities/*": ["libs/entities/*"],
      "@entities": ["libs/entities"],
      "@constants/*": ["libs/constants/*"],
      "@constants": ["libs/constants"],
      "@configs/*": ["libs/configs/*"],
      "@configs": ["libs/configs"],
      "@modules/*": ["libs/modules/*"],
      "@modules": ["libs/modules"]
    }
  },
  "exclude": ["build/*"],
  "include": ["index.ts", "libs/**/*"]
}
