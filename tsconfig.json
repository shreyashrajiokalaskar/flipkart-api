{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",

    "outDir": "./dist",
    "baseUrl": ".",

    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "alwaysStrict": true,

    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "allowJs": false,
    "sourceMap": true,

    "paths": {
      "@entities/*": ["libs/entities/*"],
      "@entities": ["libs/entities"],
      "@constants/*": ["libs/constants/*"],
      "@constants": ["libs/constants"],
      "@configs/*": ["libs/configs/*"],
      "@configs": ["libs/configs"],
      "@modules/*": ["libs/modules/*"],
      "@modules": ["libs/modules"],
      "@middlewares/*": ["libs/middlewares/*"]
    }
  },
  "include": ["index.ts", "libs/**/*"],
  "exclude": ["build", "node_modules"]
}
